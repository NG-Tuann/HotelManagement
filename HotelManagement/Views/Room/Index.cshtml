<div class="row-fluid">
    <div class="col-xl-12 col-md-12">
        <div class="row d-flex flex-wrap overflow-auto">
            <div class="col-md-2 mb-3">
                <button class="btn btn-outline-dark btn-block" data-bs-toggle="modal" data-bs-target="#filter_date_booking"><i class="fa fa-calendar"></i> Chọn ngày đặt</button>
            </div>
            <div class="col-md-2 mb-3">
                <button class="btn btn-outline-dark btn-block">Booking list</button>
            </div>
            <div class="col-md-2 mb-3">
                <button class="btn btn-outline-dark btn-block">Checkin list</button>
            </div>
            <div class="col-md-2 mb-3">
                <button class="btn btn-outline-dark btn-block">Customer list</button>
            </div>
        </div>
        @*
            So do phong cua khach san
        *@
        <div style="margin-top:20px;" class="row justify-content-start overflow-auto">
            <div class="col-xl-12 col-md-12 ">
                @{
                    for (int i = 0; i < ViewBag.tangs.Count; i++)
                    {
                                <div class="row d-flex flex-wrap mb-3">
                                    <div class="col-md-2 col-sm-4 mb-2">
                                        <div class="drop-down">
                                            <div class="floor custom_floor dropdown-toggle" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false" id="floor@(i+1)">Tầng @(ViewBag.tangs[i].Tang1)</div>
                                            <div class="dropdown-menu" aria-labelledby="dropdownMenuSizeButton1" style="margin: 0px;">
                                                <a class="dropdown-item floor-number" href="#" data-bs-toggle="modal" id="@(ViewBag.tangs[i].Tang1)" data-bs-target="#create_room">Tạo phòng</a>
                                                <div class="dropdown-divider"></div>
                                                <a class="dropdown-item floor-number" href="#" data-bs-toggle="modal" id="@(ViewBag.tangs[i].Tang1)" data-bs-target="#confirm_delete_floor">Xoá tầng</a>
                                            </div>
                                        </div>
                                    </div>
                                    @foreach (var p in ((IEnumerable<Phong>)ViewBag.tangs[i].Phongs).OrderBy(i => i.PhongSo))
                                    {
                                        @if (ViewBag.phongsTrong != null)
                                        {
                                            @if(ViewBag.phongsTrong.Contains(p))
                                            { 
                                                <div class="col-lg-2 col-md-2 col-sm-4 mb-3">
                                                    <div class="dropdown">
                                                        <div class="room custom_room_available dropdown-toggle" id="room@(p.PhongSo)" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                                            @p.PhongSo
                                                            <!-- Room type show -->
                                                            <div class="roomType">@p.MaLpNavigation.KhongGian</div>
                                                            <!-- If checked in then show stay time info -->
                                                            <span id="room@(p.PhongSo)_checkIn"></span>
                                                        </div>
                                                        <div class="dropdown-menu" aria-labelledby="dropdownMenuSizeButton1" style="margin: 0px;">
                                                            <h6 class="dropdown-header">Settings</h6>
                                                            <a class="dropdown-item" href="#" data-bs-toggle="modal" data-bs-target="#create_booking_modal">Tạo đặt phòng</a>
                                                            @* Checkin theo danh sach dat phong truoc *@
                                                            <a class="dropdown-item" href="#" data-bs-toggle="modal" data-bs-target="#list_booking_modal">List of booking</a>
                                                            <a class="dropdown-item" id="checkin_room@(p.PhongSo)" href="#" data-bs-toggle="modal" data-bs-target="#create_check_in">Check in</a>
                                                            <a class="dropdown-item" id="checkout_room@(p.PhongSo)" href="#">Check out</a>
                                                            <a class="dropdown-item" id="@(p.PhongSo)" href="#" data-bs-toggle="modal" data-bs-target="#confirm_delete_room">Xoá phòng</a>
                                                            <a class="dropdown-item" id="@(p.PhongSo)" href="#" data-bs-toggle="modal" data-bs-target="#update_room">Xem / Cập nhật phòng</a>
                                                            <div class="dropdown-divider"></div>
                                                            <a class="dropdown-item" href="#">Add service</a>
                                                        </div>
                                                    </div>
                                                </div>
                                            }
                                        }
                                        else
                                        {
                                            <div class="col-lg-2 col-md-2 col-sm-4 mb-3">
                                                <div class="dropdown">
                                                    <div class="room custom_room_available dropdown-toggle" id="room@(p.PhongSo)" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                                        @p.PhongSo
                                                        <!-- Room type show -->
                                                        <div class="roomType">@p.MaLpNavigation.KhongGian</div>
                                                        <!-- If checked in then show stay time info -->
                                                        <span id="room@(p.PhongSo)_checkIn"></span>
                                                    </div>
                                                    <div class="dropdown-menu" aria-labelledby="dropdownMenuSizeButton1" style="margin: 0px;">
                                                        <h6 class="dropdown-header">Settings</h6>
                                                        <a class="dropdown-item" href="#" data-bs-toggle="modal" data-bs-target="#create_booking_modal">Tạo đặt phòng</a>
                                                        @* Checkin theo danh sach dat phong truoc *@
                                                        <a class="dropdown-item" href="#" data-bs-toggle="modal" data-bs-target="#list_booking_modal">List of booking</a>
                                                        <a class="dropdown-item" id="checkin_room@(p.PhongSo)" href="#" data-bs-toggle="modal" data-bs-target="#create_check_in">Check in</a>
                                                        <a class="dropdown-item" id="checkout_room@(p.PhongSo)" href="#">Check out</a>
                                                        <a class="dropdown-item" id="@(p.PhongSo)" href="#" data-bs-toggle="modal" data-bs-target="#confirm_delete_room">Xoá phòng</a>
                                                        <a class="dropdown-item" id="@(p.PhongSo)" href="#" data-bs-toggle="modal" data-bs-target="#update_room">Xem / Cập nhật phòng</a>
                                                        <div class="dropdown-divider"></div>
                                                        <a class="dropdown-item" href="#">Add service</a>
                                                    </div>
                                                </div>
